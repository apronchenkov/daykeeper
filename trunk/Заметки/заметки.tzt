#include <stdio.h>
#include <math.h>

#define MAX_N           0x10000
#define MAX_PRIME       0x10000
#define MOD             3

unsigned int table_of_prime[MAX_PRIME];
unsigned int size_of_table;

unsigned int mod[MOD];

inline bool isprime(unsigned int n) {
        const unsigned int sqrt_n = sqrt(n);
        unsigned int i = 0;
        while(  i < size_of_table &&
                table_of_prime[i] <= sqrt_n &&
                0 != (n % table_of_prime[i]) )
                ++i;

        if( i < size_of_table && table_of_prime[i] <= sqrt_n )
                return false;
        return true;
}

inline void check(unsigned int n) {
        if( false == isprime(n) )
                return;
        
        ++mod[n % MOD];
        
        if( n > MAX_PRIME )
                return;
        
        table_of_prime[size_of_table++] = n;
}

int main() {
        table_of_prime[0] = 2;
        size_of_table = 1;
        mod[2] = 1;
        
        unsigned int n = 3;
        
        do {
                check(n);
                
                if( mod[1] > mod[2] )
                        printf("mod[1] > mod[2] %u\n", n);
                
                n += 2;
        } while( n <= MAX_N );
        
        printf("mod: %u %u %u\n", mod[0], mod[1], mod[2]);
        
        return 0;
}
